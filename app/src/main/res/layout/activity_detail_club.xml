<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailClubActivity"
    android:background="#304487">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/cover1">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/img_acm"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AC Milan"
            android:gravity="center"
            android:paddingTop="15dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#262121"/>

        <TextView
            android:id="@+id/txtDetailLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Kamu adalah bukti dari cantiknya paras dan hati kau jadi harimoni
saat ku bernyayi tentang gelap dan terang hidup ini kau lah bentuk terindah dari baiknya tuhan padaku
kaulah wanita terhebat hidupku tolong kamu camkan itu"
            android:gravity="center"/>




    </LinearLayout>

</ScrollView>